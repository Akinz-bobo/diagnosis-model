import NextAuth, { DefaultSession, DefaultUser } from "next-auth";

declare module "next-auth" {
  interface Session extends DefaultSession {
    user: {
      id: string;
      email: string;
      role: "USER" | "ADMIN";
      image?: string;
    };
    accessToken: string;
  }

  interface User extends DefaultUser {
    id: string;
    role: "USER" | "ADMIN";
    image?: string;
    accessToken: string;
  }
}

declare module "next-auth/jwt" {
  interface JWT {
    id: string;
    email: string;
    role: "USER" | "ADMIN";
    image?: string;
    accessToken: string;
  }
}
